#!/usr/bin/env python

import os
import sys
import random

lefties = '''\
Sune Kirkeby  | 
              | 
              | 
              | 
'''.split('\n')

os.chdir(os.path.expanduser('~/quotes'))
if len(sys.argv) == 1:
    quote_file = random.choice(filter(os.path.isfile, os.listdir('.')))
else:
    quote_file = sys.argv[1]
quote = open(quote_file).read().strip().split('\n')

for left, right in zip(lefties, quote):
    print left + right
