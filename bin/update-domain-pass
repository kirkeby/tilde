#!/usr/bin/env bash

set -e

echo -n 'New password:'
read -s password

sed -e "s/Pass .*/Pass ${password}/" -i~ ~/.mbsyncrc
sed -e "s/password = .*/password = ${password}/" -i~ ~/.smbauth
sed -e "s,auth CSIS/ski .*,auth CSIS/ski ${password}," -i~ ~/.smb/smbnetfs.auth
sed -e "s/\(set .*_pass=\).*/\1'${password}'/" -i~ ~/.muttrc-password
