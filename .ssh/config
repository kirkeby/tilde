# Global options that noone needs to override.
ServerAliveInterval 60
# HashKnownHosts can go bite my shiny metal ass! I want tab-completion to
# work, you stupid cunts!
HashKnownHosts no

# Set username and enable forwarding for hosts I know about, and whatever
# other random needs they may have
Host *.parabox.dk
    ForwardAgent yes

Host *.diku.dk
    User kirkeby

Host *.ibofobi.dk
    ForwardAgent yes

Host *.csis.local
    User ski
    ForwardAgent yes

Host *.csis.internal
    User ski
    ForwardAgent yes

Host *.csis.dk
    User ski
    ForwardAgent yes


# Random other hosts with special needs
Host atlas.munintech.dk
    Port 8888

Host brig.ncc-1701.dk
    Port 2222

Host pi.ibofobi.dk
    ProxyCommand ssh farnsworth.parabox.dk nc %h %p


# Non-DNS'ed hostnames for stuff
Host slaptop
    Hostname 10.64.11.107
    User ski
    ForwardAgent yes
    LocalForward 4443 127.0.0.1:4443

Host shire
    Hostname 192.168.1.3
    ForwardAgent yes

Host devpi
    HostName 10.64.11.66
    User pi

Host vagrant
    HostName 127.0.0.1
    User vagrant
    Port 2222
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no
    PasswordAuthentication no
    ForwardAgent yes
    IdentityFile ~/.vagrant.d/insecure_private_key
    IdentitiesOnly yes

Host legeplads
    HostName ec2-54-74-146-144.eu-west-1.compute.amazonaws.com
    User ski
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ForwardAgent yes
    IdentityFile ~/.ssh/id_rsa-aws-ski@ski-laptop

# Global defaults that should be overridable must come last.
# The fuck, ssh_config?!
Host *
    User sune
    ControlMaster auto
    ControlPath ~/.ssh/master-%r@%h:%p
