# Global options that noone needs to override.
ServerAliveInterval 60

# HashKnownHosts can go bite my shiny metal ass! I want tab-completion to
# work, you stupid cunts!
HashKnownHosts no

# Set username and enable forwarding for hosts I know about, and whatever
# other random needs they may have
Host *.parabox.dk
    ForwardAgent yes

Host *.ibofobi.dk
    ForwardAgent yes

# Random other hosts with special needs
Host atlas.munintech.dk
    Port 8888

Host brig.ncc-1701.dk
    Port 2222


# Non-DNS'ed hostnames for stuff
Host localhost
    ForwardAgent yes
    ForwardX11 yes

Host vagrant
    HostName 127.0.0.1
    User vagrant
    Port 2222
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no
    PasswordAuthentication no
    ForwardAgent yes
    IdentityFile ~/.vagrant.d/insecure_private_key
    IdentitiesOnly yes

# Local configs.
Include config-*

# Global defaults that should be overridable must come last.
# The fuck, ssh_config?!
Host *
    User sune
    ControlMaster auto
    ControlPath ~/.ssh/master-%r@%h:%p
