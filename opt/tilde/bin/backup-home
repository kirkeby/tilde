#!/bin/sh

# To create a compressed, encrypted backup:
#   backup-home | gzip -9 | openssl aes-256-cbc -salt > backup.tgz.enc
# To decompress the file use `openssl aes-256-cbc -d`.

cd ~
exec tar -czv \
    --exclude VirtualBox\ VMs \
    --exclude Dropbox \
    --exclude Downloads \
    --exclude opt \
    --exclude .rvm \
    --exclude .rbenv \
    --exclude .cache \
    --exclude .dropbox \
    --exclude .dropbox-dist \
    --exclude .thumbnails \
    --exclude .adobe \
    --exclude .mozilla \
    --exclude .vagrant.d \
    --exclude .ssh \
    .
